<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_blue.css">

<section id="agenda" class="py-20 bg-slate-50 relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-blue-900">Agenda tu Visita üìÖ</h2>
        </div>

        <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col lg:flex-row border border-gray-100">
            
            <div class="lg:w-1/2 p-8 border-r border-gray-100">
                <h3 class="text-xl font-bold text-gray-800 mb-6">1. Selecciona Fecha</h3>
                <input type="text" id="datepicker" class="w-full bg-slate-50 border border-gray-300 rounded-lg p-4 text-center font-bold outline-none cursor-pointer text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" placeholder="Clic para ver fechas">
                
                <div id="time-slots-container" class="opacity-50 pointer-events-none transition-opacity mt-6">
                    <label class="block text-sm font-bold text-gray-500 mb-4 uppercase">Horarios Disponibles</label>
                    <div class="grid grid-cols-3 gap-3" id="slots-grid"></div>
                    <p id="loading-msg" class="text-xs text-blue-500 mt-2 hidden animate-pulse">Consultando disponibilidad...</p>
                    
                    <div class="flex flex-wrap gap-4 mt-6 justify-center text-sm font-medium text-gray-600">
                        <span class="flex items-center gap-2"><span class="w-3 h-3 rounded-full bg-white border border-gray-400"></span> Libre</span>
                        <span class="flex items-center gap-2"><span class="w-3 h-3 rounded-full bg-red-100 border border-red-300"></span> Ocupado</span>
                        <span class="flex items-center gap-2"><span class="w-3 h-3 rounded-full bg-gray-200 border border-gray-300"></span> Pasado</span>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2 p-8 bg-blue-50/30 relative">
                <div id="form-overlay" class="absolute inset-0 bg-white/80 z-20 flex items-center justify-center backdrop-blur-sm">
                    <p class="font-bold text-gray-500 flex items-center gap-2">
                        <span>üëà</span> Selecciona un horario disponible
                    </p>
                </div>

                <h3 class="text-xl font-bold text-gray-800 mb-6">2. Tus Datos</h3>
                <form class="space-y-4" id="agenda-form">
                    <input type="hidden" id="selected-time" name="hora">
                    
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Nombre Completo</label>
                        <input type="text" name="nombre" class="w-full p-3 rounded-lg border border-gray-300 focus:border-blue-500 outline-none transition" required>
                    </div>
                    
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Tu Correo (Para confirmaci√≥n)</label>
                        <input type="email" name="correo" class="w-full p-3 rounded-lg border border-gray-300 focus:border-blue-500 outline-none transition" placeholder="ejemplo@gmail.com" required>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Tel√©fono M√≥vil</label>
                        <input type="tel" name="telefono" id="input-telefono" class="w-full p-3 rounded-lg border border-gray-300 focus:border-blue-500 outline-none transition" placeholder="Solo n√∫meros (10 d√≠gitos)" maxlength="10" inputmode="numeric" required>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Modelo de Inter√©s</label>
                            <select name="modelo" class="w-full p-3 bg-white rounded-lg border border-gray-300 focus:border-blue-500 outline-none transition text-gray-700" required>
                                <option value="" disabled selected>Selecciona...</option>
                                <option>Cipr√©s</option>
                                <option>Olivo</option>
                                <option>Departamento</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Tipo de Cr√©dito</label>
                            <select name="credito" class="w-full p-3 bg-white rounded-lg border border-gray-300 focus:border-blue-500 outline-none transition text-gray-700" required>
                                <option value="" disabled selected>Selecciona...</option>
                                <option>Infonavit</option>
                                <option>Fovissste</option>
                                <option>Bancario</option>
                                <option>Contado</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="w-full bg-blue-600 text-white font-bold py-4 rounded-lg hover:bg-blue-700 transition shadow-lg mt-4 transform active:scale-95">
                        Confirmar Cita
                    </button>
                    <p class="text-[10px] text-center text-gray-400 mt-2">Tus datos est√°n protegidos.</p>
                </form>
            </div>
        </div>
    </div>
</section>

<script is:inline src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script is:inline src="https://npmcdn.com/flatpickr/dist/l10n/es.js"></script>

<script is:inline>
    const timeContainer = document.getElementById('time-slots-container');
    const slotsGrid = document.getElementById('slots-grid');
    const loadingMsg = document.getElementById('loading-msg');
    const formOverlay = document.getElementById('form-overlay');
    const hiddenTime = document.getElementById('selected-time');
    
    // 1. VALIDACI√ìN DE TEL√âFONO
    const inputTel = document.getElementById('input-telefono');
    inputTel.addEventListener('input', function(e) {
        this.value = this.value.replace(/\D/g, '');
    });

    const baseHours = ["09:00", "10:00", "11:00", "12:00", "13:00", "14:00", "15:00", "16:00", "17:00"];

    flatpickr("#datepicker", {
        locale: "es",
        minDate: "today",
        dateFormat: "d F Y",
        disableMobile: "true",
        onChange: function(selectedDates, dateStr, instance) {
            if (selectedDates.length > 0) {
                const offset = selectedDates[0].getTimezoneOffset();
                const fechaLocal = new Date(selectedDates[0].getTime() - (offset * 60 * 1000));
                const fechaSQL = fechaLocal.toISOString().split('T')[0];
                cargarHorarios(fechaSQL);
            }
        }
    });

    async function cargarHorarios(fechaSeleccionada) {
        timeContainer.classList.remove('opacity-50', 'pointer-events-none');
        slotsGrid.innerHTML = '';
        loadingMsg.classList.remove('hidden');
        formOverlay.classList.remove('hidden'); 

        try {
            const respuesta = await fetch(`/obtener_horarios.php?fecha=${fechaSeleccionada}`);
            const ocupados = await respuesta.json();

            loadingMsg.classList.add('hidden');

            const ahora = new Date();
            const hoyString = ahora.toLocaleDateString('en-CA'); 
            const esHoy = fechaSeleccionada === hoyString;
            const horaActual = ahora.getHours();

            baseHours.forEach(horaStr => {
                const btn = document.createElement('button');
                btn.innerText = horaStr;
                const horaNumerica = parseInt(horaStr.split(':')[0]);

                if (ocupados.includes(horaStr + ":00") || ocupados.includes(horaStr)) {
                    btn.className = 'py-2 px-3 rounded border text-sm font-medium bg-red-50 text-red-400 cursor-not-allowed border-red-100 line-through decoration-red-400';
                    btn.disabled = true;
                    btn.title = "Reservado";
                
                } else if (esHoy && horaNumerica <= horaActual) {
                    btn.className = 'py-2 px-3 rounded border text-sm font-medium bg-gray-100 text-gray-400 cursor-not-allowed border-gray-200';
                    btn.disabled = true;
                    btn.title = "Horario pasado";
                
                } else {
                    btn.className = 'py-2 px-3 rounded border text-sm font-medium bg-white text-gray-700 hover:border-blue-500 hover:text-blue-600 border-gray-200 transition shadow-sm';
                    btn.addEventListener('click', (e) => {
                        e.preventDefault();
                        document.querySelectorAll('#slots-grid button:not(:disabled)').forEach(b => {
                            b.className = 'py-2 px-3 rounded border text-sm font-medium bg-white text-gray-700 border-gray-200 shadow-sm';
                        });
                        btn.className = 'py-2 px-3 rounded border text-sm font-medium bg-blue-600 text-white border-blue-600 shadow-md transform scale-105 transition';
                        hiddenTime.value = horaStr;
                        formOverlay.classList.add('hidden');
                    });
                }
                slotsGrid.appendChild(btn);
            });

        } catch (error) {
            console.error("Error cargando horarios", error);
            loadingMsg.innerText = "Error de conexi√≥n.";
        }
    }

    document.getElementById('agenda-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const btn = e.target.querySelector('button[type="submit"]');
        const originalText = btn.innerText;
        
        btn.innerText = "‚è≥ Enviando...";
        btn.disabled = true;
        btn.classList.add('opacity-75', 'cursor-not-allowed');

        const fp = document.querySelector("#datepicker")._flatpickr;
        if(!fp.selectedDates[0]) {
            alert("Por favor selecciona una fecha");
            btn.innerText = originalText;
            btn.disabled = false;
            return;
        }
        
        const offset = fp.selectedDates[0].getTimezoneOffset();
        const fechaLocal = new Date(fp.selectedDates[0].getTime() - (offset * 60 * 1000));
        const fechaMySQL = fechaLocal.toISOString().split('T')[0];

        const datos = {
            nombre: e.target.nombre.value,
            correo: e.target.correo.value,
            telefono: e.target.telefono.value,
            modeloInteres: e.target.modelo.value,
            tipoCredito: e.target.credito.value,
            hora: hiddenTime.value,
            fecha: fechaMySQL
        };

        try {
            const peticion = await fetch('/guardar_cita.php', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(datos)
            });
            const res = await peticion.json();

            if (res.status === 'success') {
                window.location.href = '/exito';
            } else {
                alert("Error: " + res.message);
                btn.innerText = originalText;
                btn.disabled = false;
                btn.classList.remove('opacity-75', 'cursor-not-allowed');
            }
        } catch (error) {
            alert("Error de conexi√≥n con el servidor");
            btn.innerText = originalText;
            btn.disabled = false;
            btn.classList.remove('opacity-75', 'cursor-not-allowed');
        }
    });
</script>