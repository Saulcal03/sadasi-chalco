<script is:inline src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script is:inline src="https://npmcdn.com/flatpickr/dist/l10n/es.js"></script>

<script is:inline>
    // 1. Configuraci√≥n del Calendario (Visual)
    const dateInput = document.getElementById('datepicker');
    const timeContainer = document.getElementById('time-slots-container');
    const slotsGrid = document.getElementById('slots-grid');
    const formOverlay = document.getElementById('form-overlay');
    const hiddenTime = document.getElementById('selected-time');

    const baseHours = ["09:00", "10:00", "11:00", "12:00", "13:00", "14:00", "15:00", "16:00", "17:00"];

    flatpickr("#datepicker", {
        locale: "es",
        minDate: "today",
        dateFormat: "d F Y",
        onChange: function(selectedDates, dateStr, instance) {
            activateTimeSlots(dateStr);
        }
    });

    function activateTimeSlots(dateStr) {
        timeContainer.classList.remove('opacity-50', 'pointer-events-none');
        slotsGrid.innerHTML = '';

        baseHours.forEach(time => {
            const btn = document.createElement('button');
            btn.className = 'py-2 px-3 rounded border text-sm font-medium transition duration-200 bg-white text-gray-700 hover:border-blue-500 hover:text-blue-600';
            btn.innerText = time;
            
            // Simulaci√≥n visual de ocupado (30% prob)
            if (Math.random() < 0.3) {
                btn.className = 'py-2 px-3 rounded border text-sm font-medium bg-gray-100 text-gray-400 cursor-not-allowed';
                btn.disabled = true;
                btn.innerText += " (Ocupado)";
            } else {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    document.querySelectorAll('#slots-grid button').forEach(b => {
                        if(!b.disabled) b.className = 'py-2 px-3 rounded border text-sm font-medium bg-white text-gray-700';
                    });
                    btn.className = 'py-2 px-3 rounded border text-sm font-medium bg-blue-600 text-white border-blue-600';
                    formOverlay.classList.add('hidden');
                    hiddenTime.value = time;
                });
            }
            slotsGrid.appendChild(btn);
        });
    }

    // 2. L√ìGICA DE ENV√çO AL PHP (BACKEND)
    const form = document.querySelector('form');
    
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const btn = form.querySelector('button');
        const originalText = btn.innerText;
        btn.innerText = "‚è≥ Guardando en servidor...";
        btn.disabled = true;

        // Obtener fecha real del calendario
        const fp = document.querySelector("#datepicker")._flatpickr;
        if (!fp.selectedDates[0]) { alert("Selecciona una fecha"); btn.disabled=false; return; }
        
        // Formato MySQL (YYYY-MM-DD)
        const fechaMySQL = fp.selectedDates[0].toISOString().split('T')[0];

        // Datos a enviar
        const datos = {
            nombre: form.querySelector('[name="nombre"]').value,
            telefono: form.querySelector('[name="telefono"]').value,
            modeloInteres: form.querySelector('[name="modelo"]').value,
            tipoCredito: form.querySelector('[name="credito"]').value,
            hora: hiddenTime.value,
            fecha: fechaMySQL
        };

        try {
            // ENVIAR AL PHP
            const peticion = await fetch('/guardar_cita.php', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(datos)
            });

            const respuesta = await peticion.json();

            if (respuesta.status === 'success') {
                window.location.href = '/exito';
            } else {
                alert("Error al guardar: " + (respuesta.message || "Desconocido"));
                btn.innerText = originalText;
                btn.disabled = false;
            }
        } catch (error) {
            console.error(error);
            // NOTA: Si est√°s en localhost sin PHP, esto fallar√°. 
            // En tu hosting Plesk funcionar√°.
            alert("‚ö†Ô∏è Error de conexi√≥n. (Si est√°s probando en local sin PHP, esto es normal).");
            btn.innerText = originalText;
            btn.disabled = false;
        }
    });
</script>